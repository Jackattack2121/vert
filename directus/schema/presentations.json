{
  "collection": "presentations",
  "meta": {
    "collection": "presentations",
    "icon": "slideshow",
    "note": "Investor and company presentations",
    "display_template": "{{title}} - {{date}}",
    "hidden": false,
    "singleton": false,
    "translations": null,
    "archive_field": null,
    "archive_app_filter": true,
    "archive_value": null,
    "unarchive_value": null,
    "sort_field": "sort",
    "accountability": "all",
    "color": "#6644FF",
    "item_duplication_fields": null,
    "sort": 1,
    "group": null,
    "collapse": "open"
  },
  "schema": {
    "name": "presentations",
    "comment": "Investor and company presentations collection"
  },
  "fields": [
    {
      "field": "id",
      "type": "uuid",
      "schema": {
        "is_primary_key": true,
        "has_auto_increment": false,
        "is_nullable": false
      },
      "meta": {
        "hidden": true,
        "readonly": true,
        "interface": "input",
        "special": ["uuid"]
      }
    },
    {
      "field": "status",
      "type": "string",
      "schema": {
        "default_value": "draft",
        "is_nullable": false
      },
      "meta": {
        "width": "full",
        "options": {
          "choices": [
            {
              "text": "Published",
              "value": "published"
            },
            {
              "text": "Draft",
              "value": "draft"
            }
          ]
        },
        "interface": "select-dropdown",
        "display": "labels",
        "display_options": {
          "showAsDot": true,
          "choices": [
            {
              "text": "Published",
              "value": "published",
              "foreground": "#FFFFFF",
              "background": "#00C897"
            },
            {
              "text": "Draft",
              "value": "draft",
              "foreground": "#FFFFFF",
              "background": "#D3DAE4"
            }
          ]
        }
      }
    },
    {
      "field": "sort",
      "type": "integer",
      "schema": {
        "is_nullable": true
      },
      "meta": {
        "interface": "input",
        "hidden": true
      }
    },
    {
      "field": "title",
      "type": "string",
      "schema": {
        "is_nullable": false
      },
      "meta": {
        "width": "full",
        "interface": "input",
        "required": true,
        "options": {
          "placeholder": "Presentation title"
        }
      }
    },
    {
      "field": "date",
      "type": "date",
      "schema": {
        "is_nullable": false
      },
      "meta": {
        "width": "half",
        "interface": "datetime",
        "required": true,
        "display": "datetime",
        "display_options": {
          "relative": false
        }
      }
    },
    {
      "field": "category",
      "type": "string",
      "schema": {
        "is_nullable": false,
        "default_value": "Investor Presentation"
      },
      "meta": {
        "width": "half",
        "interface": "select-dropdown",
        "required": true,
        "options": {
          "choices": [
            {
              "text": "Investor Presentation",
              "value": "Investor Presentation"
            },
            {
              "text": "Company Presentation",
              "value": "Company Presentation"
            },
            {
              "text": "Conference",
              "value": "Conference"
            },
            {
              "text": "Webinar",
              "value": "Webinar"
            }
          ]
        }
      }
    },
    {
      "field": "summary",
      "type": "text",
      "schema": {
        "is_nullable": true
      },
      "meta": {
        "width": "full",
        "interface": "input-multiline",
        "options": {
          "placeholder": "Brief summary or description of the presentation"
        }
      }
    },
    {
      "field": "image",
      "type": "uuid",
      "schema": {
        "is_nullable": true
      },
      "meta": {
        "width": "half",
        "interface": "file-image",
        "display": "image",
        "note": "Thumbnail image for the presentation card"
      }
    },
    {
      "field": "file",
      "type": "uuid",
      "schema": {
        "is_nullable": true
      },
      "meta": {
        "width": "half",
        "interface": "file",
        "display": "raw",
        "note": "PDF file of the presentation"
      }
    },
    {
      "field": "featured",
      "type": "boolean",
      "schema": {
        "default_value": false,
        "is_nullable": false
      },
      "meta": {
        "width": "half",
        "interface": "boolean",
        "display": "boolean",
        "note": "Display on homepage and featured sections"
      }
    }
  ],
  "instructions": {
    "import": "To import this schema into Directus:\n1. Navigate to Settings > Data Model in Directus\n2. Create a new collection called 'presentations'\n3. Add each field from this schema manually, or\n4. Use the Directus CLI: directus schema apply ./presentations.json"
  }
}
