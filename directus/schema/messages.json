{
  "collection": "messages",
  "meta": {
    "collection": "messages",
    "icon": "message",
    "note": "Message threads between portal users and admin",
    "display_template": "{{subject}} - {{user_id.email}}",
    "hidden": false,
    "singleton": false,
    "translations": null,
    "archive_field": "status",
    "archive_app_filter": true,
    "archive_value": "archived",
    "unarchive_value": "open",
    "sort_field": "created_at",
    "accountability": "all",
    "color": "#8B5CF6",
    "item_duplication_fields": null,
    "sort": 4,
    "group": null,
    "collapse": "open"
  },
  "schema": {
    "name": "messages",
    "comment": "Communication threads for portal users"
  },
  "fields": [
    {
      "field": "id",
      "type": "uuid",
      "schema": {
        "is_primary_key": true,
        "has_auto_increment": false,
        "is_nullable": false
      },
      "meta": {
        "hidden": true,
        "readonly": true,
        "interface": "input",
        "special": ["uuid"]
      }
    },
    {
      "field": "status",
      "type": "string",
      "schema": {
        "default_value": "open",
        "is_nullable": false
      },
      "meta": {
        "width": "half",
        "options": {
          "choices": [
            {"text": "Open", "value": "open"},
            {"text": "Replied", "value": "replied"},
            {"text": "Resolved", "value": "resolved"},
            {"text": "Archived", "value": "archived"}
          ]
        },
        "interface": "select-dropdown",
        "display": "labels",
        "display_options": {
          "showAsDot": true,
          "choices": [
            {"text": "Open", "value": "open", "foreground": "#FFFFFF", "background": "#2563EB"},
            {"text": "Replied", "value": "replied", "foreground": "#FFFFFF", "background": "#8B5CF6"},
            {"text": "Resolved", "value": "resolved", "foreground": "#FFFFFF", "background": "#00C897"},
            {"text": "Archived", "value": "archived", "foreground": "#FFFFFF", "background": "#D3DAE4"}
          ]
        }
      }
    },
    {
      "field": "user_id",
      "type": "uuid",
      "schema": {
        "is_nullable": false,
        "foreign_key_table": "portal_users",
        "foreign_key_column": "id"
      },
      "meta": {
        "width": "full",
        "interface": "select-dropdown-m2o",
        "required": true,
        "display": "related-values",
        "options": {
          "template": "{{first_name}} {{last_name}} ({{email}})"
        }
      }
    },
    {
      "field": "subject",
      "type": "string",
      "schema": {
        "is_nullable": false
      },
      "meta": {
        "width": "full",
        "interface": "input",
        "required": true,
        "options": {
          "placeholder": "Message subject"
        }
      }
    },
    {
      "field": "message",
      "type": "text",
      "schema": {
        "is_nullable": false
      },
      "meta": {
        "width": "full",
        "interface": "input-rich-text-html",
        "required": true,
        "options": {
          "placeholder": "Message content"
        }
      }
    },
    {
      "field": "reply",
      "type": "text",
      "schema": {
        "is_nullable": true
      },
      "meta": {
        "width": "full",
        "interface": "input-rich-text-html",
        "options": {
          "placeholder": "Admin reply"
        }
      }
    },
    {
      "field": "replied_at",
      "type": "timestamp",
      "schema": {
        "is_nullable": true
      },
      "meta": {
        "width": "half",
        "interface": "datetime",
        "readonly": true,
        "display": "datetime",
        "display_options": {
          "relative": true
        }
      }
    },
    {
      "field": "replied_by",
      "type": "string",
      "schema": {
        "is_nullable": true
      },
      "meta": {
        "width": "half",
        "interface": "input",
        "readonly": true,
        "note": "Admin user who replied"
      }
    },
    {
      "field": "read",
      "type": "boolean",
      "schema": {
        "default_value": false,
        "is_nullable": false
      },
      "meta": {
        "width": "half",
        "interface": "boolean",
        "display": "boolean"
      }
    },
    {
      "field": "created_at",
      "type": "timestamp",
      "schema": {
        "default_value": "CURRENT_TIMESTAMP",
        "is_nullable": false
      },
      "meta": {
        "width": "half",
        "interface": "datetime",
        "readonly": true,
        "display": "datetime",
        "special": ["date-created"]
      }
    },
    {
      "field": "updated_at",
      "type": "timestamp",
      "schema": {
        "default_value": "CURRENT_TIMESTAMP",
        "is_nullable": false
      },
      "meta": {
        "width": "half",
        "interface": "datetime",
        "readonly": true,
        "display": "datetime",
        "special": ["date-updated"]
      }
    }
  ]
}
