{
  "collection": "client_documents",
  "meta": {
    "collection": "client_documents",
    "icon": "description",
    "note": "Private documents for portal users",
    "display_template": "{{title}} - {{category}}",
    "hidden": false,
    "singleton": false,
    "translations": null,
    "archive_field": "status",
    "archive_app_filter": true,
    "archive_value": "archived",
    "unarchive_value": "published",
    "sort_field": "created_at",
    "accountability": "all",
    "color": "#F59E0B",
    "item_duplication_fields": null,
    "sort": 3,
    "group": null,
    "collapse": "open"
  },
  "schema": {
    "name": "client_documents",
    "comment": "Private documents accessible by portal users"
  },
  "fields": [
    {
      "field": "id",
      "type": "uuid",
      "schema": {
        "is_primary_key": true,
        "has_auto_increment": false,
        "is_nullable": false
      },
      "meta": {
        "hidden": true,
        "readonly": true,
        "interface": "input",
        "special": ["uuid"]
      }
    },
    {
      "field": "status",
      "type": "string",
      "schema": {
        "default_value": "published",
        "is_nullable": false
      },
      "meta": {
        "width": "half",
        "options": {
          "choices": [
            {"text": "Published", "value": "published"},
            {"text": "Draft", "value": "draft"},
            {"text": "Archived", "value": "archived"}
          ]
        },
        "interface": "select-dropdown",
        "display": "labels",
        "display_options": {
          "showAsDot": true,
          "choices": [
            {"text": "Published", "value": "published", "foreground": "#FFFFFF", "background": "#00C897"},
            {"text": "Draft", "value": "draft", "foreground": "#FFFFFF", "background": "#D3DAE4"},
            {"text": "Archived", "value": "archived", "foreground": "#FFFFFF", "background": "#95A5C6"}
          ]
        }
      }
    },
    {
      "field": "title",
      "type": "string",
      "schema": {
        "is_nullable": false
      },
      "meta": {
        "width": "full",
        "interface": "input",
        "required": true,
        "options": {
          "placeholder": "Document title"
        }
      }
    },
    {
      "field": "category",
      "type": "string",
      "schema": {
        "is_nullable": false,
        "default_value": "Report"
      },
      "meta": {
        "width": "half",
        "interface": "select-dropdown",
        "required": true,
        "options": {
          "choices": [
            {"text": "Financial Report", "value": "Financial Report"},
            {"text": "Tax Document", "value": "Tax Document"},
            {"text": "Certificate", "value": "Certificate"},
            {"text": "Contract", "value": "Contract"},
            {"text": "NDA", "value": "NDA"},
            {"text": "Presentation", "value": "Presentation"},
            {"text": "Other", "value": "Other"}
          ]
        }
      }
    },
    {
      "field": "description",
      "type": "text",
      "schema": {
        "is_nullable": true
      },
      "meta": {
        "width": "full",
        "interface": "input-multiline",
        "options": {
          "placeholder": "Brief description of the document"
        }
      }
    },
    {
      "field": "file",
      "type": "uuid",
      "schema": {
        "is_nullable": false
      },
      "meta": {
        "width": "half",
        "interface": "file",
        "required": true,
        "display": "raw"
      }
    },
    {
      "field": "access_type",
      "type": "string",
      "schema": {
        "default_value": "specific_user",
        "is_nullable": false
      },
      "meta": {
        "width": "half",
        "interface": "select-dropdown",
        "required": true,
        "options": {
          "choices": [
            {"text": "Specific User", "value": "specific_user"},
            {"text": "All Shareholders", "value": "all_shareholders"},
            {"text": "All Institutional", "value": "all_institutional"},
            {"text": "All Portal Users", "value": "all_portal_users"}
          ]
        },
        "note": "Who can access this document"
      }
    },
    {
      "field": "user_id",
      "type": "uuid",
      "schema": {
        "is_nullable": true,
        "foreign_key_table": "portal_users",
        "foreign_key_column": "id"
      },
      "meta": {
        "width": "full",
        "interface": "select-dropdown-m2o",
        "display": "related-values",
        "options": {
          "template": "{{first_name}} {{last_name}} ({{email}})"
        },
        "note": "Specific user (only if access_type is 'specific_user')"
      }
    },
    {
      "field": "download_count",
      "type": "integer",
      "schema": {
        "default_value": 0,
        "is_nullable": false
      },
      "meta": {
        "width": "half",
        "interface": "input",
        "readonly": true
      }
    },
    {
      "field": "created_at",
      "type": "timestamp",
      "schema": {
        "default_value": "CURRENT_TIMESTAMP",
        "is_nullable": false
      },
      "meta": {
        "width": "half",
        "interface": "datetime",
        "readonly": true,
        "display": "datetime",
        "special": ["date-created"]
      }
    },
    {
      "field": "updated_at",
      "type": "timestamp",
      "schema": {
        "default_value": "CURRENT_TIMESTAMP",
        "is_nullable": false
      },
      "meta": {
        "width": "half",
        "interface": "datetime",
        "readonly": true,
        "display": "datetime",
        "special": ["date-updated"]
      }
    }
  ]
}
